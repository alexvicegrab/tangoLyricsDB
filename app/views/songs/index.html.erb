<%- model_class = Song -%>
<div class="page-header">
	<h4 style="float:right">
		Displaying <%= @songs.count.nil? ? 0 : @songs.count %> / <%= Song.count.nil? ? 0 : Song.count %>
	</h4>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
			<th><%= model_class.human_attribute_name(:title) %></th>
			<th><%= model_class.human_attribute_name(:genre) %></th>
      <th><%= model_class.human_attribute_name(:composer) %></th>
      <th><%= model_class.human_attribute_name(:lyricist) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
			<th><%= "T#" %></th>
      <th><%=t '.actions', :default => t("helpers.actions!") %></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, song_path(song) %></td>
				<td><%= song.genre.blank? ? "N/A" : song.genre.name %></td>
        <td><%= song.composer %></td>
        <td><%= song.lyricist %></td>
        <td><%= song.year.nil? ? "" : song.year %></td>
				<td><%= song.translations.size %></td>
        <td>
          <%= link_to raw('<i class="icon-edit icon-white"></i>'),
                      edit_song_path(song), :class => 'btn btn-mini' %>
          <%= link_to raw('<i class="icon-remove icon-white"></i>'),
                      song_path(song),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>