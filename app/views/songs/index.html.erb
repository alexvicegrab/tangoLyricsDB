<%- model_class = Song -%>
<%= render partial: 'shared/title', locals: { model_class: model_class } %>

<%= render partial: 'shared/flash', locals: { f: flash } %>

<table class="table table-striped">
  <thead>
    <tr>
			<th><%= model_class.human_attribute_name(:title) %></th>
			<th><%= model_class.human_attribute_name(:genre) %></th>
      <th><%= model_class.human_attribute_name(:composer) %></th>
      <th><%= model_class.human_attribute_name(:lyricist) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
			<th><%= "T#" %></th>
      <th class='action_column'><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, song_path(song) %></td>
				<td><%= song.genre.blank? ? "N/A" : song.genre.name %></td>
        <td><%= song.composer %></td>
        <td><%= song.lyricist %></td>
        <td><%= song.year.nil? ? "" : song.year %></td>
				<td><%= song.translations.size %></td>
        <td class='action_column'>
			    <%= link_to raw('<i class="glyphicon glyphicon-eye-open"></i>'),
			                song_path(song),  :class => 'btn btn-xs btn-default' %>
          <%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'),
                      edit_song_path(song), :class => 'btn btn-xs btn-warning' %>
          <%= link_to raw('<i class="glyphicon glyphicon-remove"></i>'),
                      song_path(song),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>