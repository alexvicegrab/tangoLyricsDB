<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_song_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
			<!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:title) %></th>
			<th><%= model_class.human_attribute_name(:genre) %></th>
      <th><%= model_class.human_attribute_name(:composer) %></th>
      <th><%= model_class.human_attribute_name(:lyricist) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
			<th><%= "T#" %></th>
      <th><%=t '.actions', :default => t("helpers.managing") %></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <!-- <td><%= link_to song.id, song_path(song) %></td> -->
        <td><%= link_to song.title, song_path(song) %></td>
				<td><%= song.genre.blank? ? "N/A" : song.genre.name %></td>
        <td><%= song.composer %></td>
        <td><%= song.lyricist %></td>
        <td><%= song.year.nil? ? "" : song.year %></td>
        <!--  <td><%=l song.created_at %></td> -->
				<td><%= song.translations.size %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_song_path(song), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.del")),
                      song_path(song),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>