<%- model_class = Translation -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<% if flash[:translation_success] %>
    <div class="alert alert-success"><%= flash[:translation_success] %></div>
<% end %>
<% if flash[:translation_error] %>
    <div class="alert alert-danger"><%= flash[:translation_error] %></div>
<% end %>

<%= form_for [@song, @translation], :html => { class: 'form-horizontal' } do |f| %>
	<%= render :partial => 'form', object: f, as: 'f' %>
<% end %>