<tr>
	<td><%= auto_link(translation.link) %></td>
	<td><%= translation.language.iso %></td>
	<td><%= translation.translator_id == 0 ? "Unknown" : Translator.find(translation.translator_id).site_name %></td>
	<td>
    <%= link_to raw('<i class="icon-edit icon-white"></i>'),
                edit_song_translation_path(translation.song, translation),  :class => 'btn btn-mini' %>
		<%= link_to raw('<i class="icon-remove icon-white"></i>'),
												[translation.song, translation],
					              method: :delete,
					              data: { confirm: t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
												:class => 'btn btn-mini btn-danger' %>
	</td>
</tr>