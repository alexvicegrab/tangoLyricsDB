<tr>
  <td>
	<%= link_to raw(translation.active ? '<i type="button" class="glyphicon glyphicon-ok"></i>' : '<i type="button" class="glyphicon glyphicon-exclamation-sign"></i>'), 
	check_link_song_translation_path(translation.song, translation), method: :put, :class => translation.active ? 'btn btn-xs btn-success' : 'btn btn-xs btn-warning' %>
	</td>
	<td><%= link_to URI.decode_www_form_component(translation.link), translation.link %></td>
	<td><%= translation.language.iso %></td>
	<td><%= translation.translator_id == 0 ? "[Not categorised]" : Translator.find(translation.translator_id).site_name %></td>
	<td class='action_column'>
    <%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'),
                edit_song_translation_path(translation.song, translation),  :class => 'btn btn-xs btn-warning' %>
		<%= link_to raw('<i class="glyphicon glyphicon-remove"></i>'),
												[translation.song, translation],
					              method: :delete,
					              data: { confirm: t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
												:class => 'btn btn-xs btn-danger' %>
	</td>
</tr>