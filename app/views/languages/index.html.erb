<%- model_class = Language -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
			<th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= "ISO" %></th>
			<th><%= "T#" %></th>
      <th><%=t '.actions', :default => t("helpers.actions!") %></th>
    </tr>
  </thead>
  <tbody>
    <% @languages.each do |language| %>
      <tr>
				<td><%= link_to language.name, language_path(language) %></td>
        <td><%= language.iso %></td>
				<td><%= language.translations.size %></td>
        <td>
          <%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'),
                      edit_language_path(language), :class => 'btn btn-xs btn-warning' %>
          <%= link_to raw('<i class="glyphicon glyphicon-remove"></i>'),
                      language_path(language),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new_language")),
            new_language_path,
            :class => 'btn btn-primary' %>
