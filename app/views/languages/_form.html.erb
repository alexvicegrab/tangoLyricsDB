<%= form_for @language, :html => { class: 'form-horizontal' } do |f| %>

	<%= render partial: 'shared/error', locals: {f: @language} %>
	
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
	
	<div class="form-group">
    <%= f.label :iso, "ISO", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :iso, class: 'form-control' %>
    </div>
  </div>

	<div class="form-group">
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to '<i class="glyphicon glyphicon-trash"></i> '.html_safe + t('.cancel', :default => t("helpers.links.cancel")),
                languages_path, class: 'btn btn-default' %>
		</div>
  </div>
<% end %>
