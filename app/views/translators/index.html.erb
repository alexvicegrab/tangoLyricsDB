<%- model_class = Translator -%>
<%= render partial: 'shared/title', locals: { model_class: model_class } %>

<%= render partial: 'shared/flash', locals: { f: flash } %>

<table class="table table-striped">
  <thead>
    <tr>
			<th class='search_column'><%= model_class.human_attribute_name(:search) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:site_name) %></th>
      <th><%= model_class.human_attribute_name(:site_link) %></th>
      <th><%= "T#" %></th>
      <th class='action_column'><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @translators.each do |translator| %>
      <tr>
				<td class='search_column'><%= render partial: 'shared/search_icon', locals: { f: translator } %></td>
        <td><%= translator.name %></td>
        <td><%= link_to translator.site_name, translator_path(translator)%></td>
        <td><%= auto_link(translator.site_link) %></td>
        <td><%= translator.translations.size %></td>
        <td class='action_column'>
			    <%= link_to raw('<i class="glyphicon glyphicon-eye-open"></i>'),
			                translator_path(translator),  :class => 'btn btn-xs btn-default' %>
          <%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'),
                      edit_translator_path(translator), :class => 'btn btn-xs btn-warning' %>
          <%= link_to raw('<i class="glyphicon glyphicon-remove"></i>'),
                      translator_path(translator),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '<i class="glyphicon glyphicon-pencil"></i> '.html_safe + t('.new', :default => t("helpers.links.new_translator")),
            new_translator_path,
            :class => 'btn btn-warning' %>
