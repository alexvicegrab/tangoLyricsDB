<%- model_class = Translator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:site_name) %></th>
      <th><%= model_class.human_attribute_name(:site_link) %></th>
      <th><%= "T#" %></th>
      <th><%=t '.actions', :default => t("helpers.managing") %></th>
    </tr>
  </thead>
  <tbody>
    <% @translators.each do |translator| %>
      <tr>
        <td><%= translator.name %></td>
        <td><%= link_to translator.site_name, translator_path(translator)%></td>
        <td><%= auto_link(translator.site_link) %></td>
        <td><%= translator.translations.size %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_translator_path(translator), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.del")),
                      translator_path(translator),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_translator_path,
            :class => 'btn btn-primary' %>
