<%- model_class = Translator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= render partial: 'shared/flash', locals: { f: flash } %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @translator.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_name) %>:</strong></dt>
  <dd><%= @translator.site_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_link) %>:</strong></dt>
  <dd><%= auto_link(@translator.site_link) %></dd>
</dl>

<div class="form-actions">
  <%= link_to '<i class="glyphicon glyphicon-chevron-left"></i> '.html_safe + t('.back', :default => t("helpers.links.back")),
              translators_path, :class => 'btn btn-default'  %>
  <%= link_to '<i class="glyphicon glyphicon-edit"></i> '.html_safe + t('.edit', :default => t("helpers.links.edit")),
              edit_translator_path(@translator), :class => 'btn btn-warning' %>
  <%= link_to '<i class="glyphicon glyphicon-remove"></i> '.html_safe + t('.destroy', :default => t("helpers.links.destroy")),
              translator_path(@translator),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
