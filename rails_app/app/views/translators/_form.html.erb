<%= form_for @translator, :html => { class: 'form-horizontal' } do |f| %>

	<%= render partial: 'shared/error', locals: {f: @translator} %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :site_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :site_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :site_link, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :site_link, class: 'form-control' %>
    </div>
  </div>

	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
    	<%= f.submit nil, class: 'btn btn-primary' %>
    	<%= link_to '<i class="fa fa-trash"></i> '.html_safe + t('.cancel', :default => t("helpers.links.cancel")),
                translators_path, class: 'btn btn-default' %>
		</div>
  </div>
<% end %>
