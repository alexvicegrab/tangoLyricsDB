<%= form_for @genre, :html => { class: 'form-horizontal' } do |f| %>

	<%= render partial: 'shared/error', locals: { f: @genre } %>
	
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
    	<%= f.text_field :name, class: 'form-control' %>
		</div>
  </div>

	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to '<i class="glyphicon glyphicon-trash"></i> '.html_safe + t('.cancel', :default => t("helpers.links.cancel")),
                genres_path, class: 'btn btn-default' %>
		</div>
  </div>
<% end %>
