<%- model_class = Language -%>
<% title @language.name %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @language.name %></dd>
  <dt><strong><%= "ISO" %>:</strong></dt>
  <dd><%= @language.iso %></dd>
  <dt><strong><%= model_class.human_attribute_name(:count) %>:</strong></dt>
  <dd><%= @language.translations.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:search) %>:</strong></dt>
  <dd><%= render partial: 'shared/search_icon', locals: { f: @language } %></dd>
</dl>

<div class="form-actions">
  <%= link_to '<i class="fa fa-chevron-left"></i> '.html_safe + t('.back', :default => t("helpers.links.back")),
              languages_path, :class => 'btn btn-default'  %>
  <%= link_to '<i class="fa fa-edit"></i> '.html_safe + t('.edit', :default => t("helpers.links.edit")),
              edit_language_path(@language), :class => 'btn btn-warning' %>
  <%= link_to '<i class="fa fa-trash"></i> '.html_safe + t('.destroy', :default => t("helpers.links.destroy")),
              language_path(@language),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
