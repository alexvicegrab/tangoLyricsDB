<div class="form-group">
  <%= f.label :link, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :link, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :language, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
		<%= f.collection_select :language_id, Language.all, :id, :name, {prompt: true}, {class: 'form-control'} %>
  </div>
</div>

<div class="form-group">
	<div class="col-sm-10 col-sm-offset-2">
		<%= f.submit nil, class: 'btn btn-primary' %>
  	<%= link_to '<i class="fa fa-trash"></i> '.html_safe + t('.cancel', :default => t("helpers.links.cancel")),
            :back, class: 'btn btn-default' unless controller?('songs') %>
	</div>
</div>
